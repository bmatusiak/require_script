{
  "env": {
    "browser": true, // For UMD compatibility
    "node": true,
    "es2021": true // Enables async/await
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true      
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react-hooks/recommended"],
  "plugins": ["react", "react-hooks"],
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "error",
    "no-global-assign": "warn",
    "semi": "warn"
  },
  "globals": {
    "BigInt": true,
    "globalThis": true,
    "$": true
  }
}